[
    {
        "name": "poca-webserver",
        "image": "goodfellox/goodfellow:latest${IMAGE_DIGEST}",
        "memoryReservation": 950,
        "portMappings": [
            {
            "containerPort": 8080,
            "hostPort": 80,
            "protocol": "tcp"
            }
        ],
        "cpu": 1024,
        "essential": true,
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-region": "eu-west-3",
                "awslogs-group": "poca-web",
                "awslogs-stream-prefix": "ecs-poca"
            }
        },
        "privileged": false,
        "environment": [{
            "name": "DB_HOST",
            "value": "${DB_HOST}"
        }],
        "secrets": [{
            "name": "DB_PASSWORD",
            "valueFrom": "arn:aws:ssm:eu-west-3:367931036873:parameter/database/password"
        }]
    }
]
